<Window x:Class="DurkaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DurkaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
        <TextBox Name="Arg1" MinWidth="50"/>
        <ComboBox Name="Selector">
            <TextBlock>+</TextBlock>
            <TextBlock>-</TextBlock>
            <TextBlock>*</TextBlock>
            <TextBlock>/</TextBlock>
        </ComboBox>
        <TextBox MinWidth="50" Name="Arg2"/>
        <Button Click="Solve">Вычислить</Button>
        <TextBlock Name="Answer"/>
    </StackPanel>
</Window>
